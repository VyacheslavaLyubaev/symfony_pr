{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('request.list') }}">К списку</a>
    <h1>Запрос : {{ request.title }}
        <a class="btn btn-outline-primary" href="{{ path('request.edit', {'id': request.id}) }}">Редактировать</a>
    </h1>
    <div>
        <table class="table">
            <thead class=" ">
            </thead>
            <tbody>
                <tr>
                    <td>Сообщение</td>
                    <td>{{ request.message }}</td>
                </tr>
                <tr>
                    <td>Статус</td>
                    <td>{{ request.status }}</td>
                </tr>
                <tr>
                    <td>Дата создания</td>
                    <td>{{ request.createAt.format('Y.m.d H:i:s') }}</td>
                </tr>
                <tr>
                    <td>Создатель</td>
                    <td>{{ request.createBy }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}